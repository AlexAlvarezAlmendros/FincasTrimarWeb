{
  "name": "fincas-trimar-backend",
  "version": "1.0.0",
  "description": "Backend API para Fincas Trimar - Portal inmobiliario",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "test": "vitest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "db:migrate": "node -e \"import('./src/db/migrations/migrationRunner.js').then(m => m.runMigrations())\"",
    "db:seed": "node -e \"import('./src/db/seeds/initialData.js').then(s => s.runSeeds())\"",
    "db:reset": "npm run db:migrate; npm run db:seed",
    "setup": "copy .env.example .env"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "@libsql/client": "^0.4.0",
    "zod": "^3.22.4",
    "pino": "^8.16.1",
    "rate-limiter-flexible": "^5.0.3",
    "form-data": "^4.0.0",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "eslint": "^8.53.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "inmobiliaria",
    "api",
    "express",
    "sqlite",
    "turso"
  ],
  "author": "Fincas Trimar",
  "license": "MIT"
}